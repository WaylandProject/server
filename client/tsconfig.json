{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "target": "es2015",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build"
  },
  
  "exclude": [
	  "node_modules",
    "ui"
  ],

  "include": [
    "src/**/*"
  ],
}
